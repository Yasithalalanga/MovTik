<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.livecodex.movtik">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovTik">
        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RatingResultActivity"
            android:label="Movie Details"
            android:parentActivityName=".RatingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.RatingActivity" />
        </activity>
        <activity
            android:name=".EditDetailsActivity"
            android:label="Register Movie"
            android:parentActivityName=".EditMovieActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.EditMovieActivity" />
        </activity>
        <activity
            android:name=".RegisterMovieActivity"
            android:label="Register Movie"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.MainActivity" />
        </activity>
        <activity
            android:name=".DisplayMovieActivity"
            android:label="Display Movies"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.MainActivity" />
        </activity>
        <activity
            android:name=".FavouritesActivity"
            android:label="Favourite Movies"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.MainActivity" />
        </activity>
        <activity
            android:name=".EditMovieActivity"
            android:label="Edit Movie"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.MainActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="Search Movie"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.MainActivity" />
        </activity>
        <activity
            android:name=".RatingActivity"
            android:label="Rating Movie"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.livecodex.movtik.MainActivity" />
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>